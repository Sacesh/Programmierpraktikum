#! /usr/bin/perl -w
#warnings, newlines
use strict;
use LWP::Simple;

print "Enter query for uniprot, you will receive the number of results; no query will return the database's current size:";
my $line = <STDIN>;
chomp $line;

my $html = get("http://www.uniprot.org/uniprot/?query=".$line);
my @chars = split("", $html);
my $subs;
$html =~ m/of <strong>(.+)<\/strong> result/;
$subs =~ m/(\d+,?)+/;
if(!$line) {
	$line = "<no filter>";
}
print "Searching for $line yields ".$1." results\n";
